# =================================
# NICHE RFP TRACKER CONFIGURATION
# =================================

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=sqlite:///./rfp_tracker.db
DB_LOGGING=false

# Email Configuration (Primary Account)
EMAIL_HOST=imap.gmail.com
EMAIL_PORT=993
EMAIL_USER=joshua@nichewaterproofing.com
EMAIL_PASS=your-app-password-here
EMAIL_TLS=true

# Secondary Email Account (BD)
EMAIL_BD_HOST=imap.gmail.com
EMAIL_BD_PORT=993
EMAIL_BD_USER=bd@nichewaterproofing.com
EMAIL_BD_PASS=your-app-password-here
EMAIL_BD_TLS=true

# SMTP Configuration (for outbound emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=joshua@nichewaterproofing.com
SMTP_PASS=your-app-password-here

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Notification Services
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
SLACK_CHANNEL=#rfp-alerts

# Push Notifications
WEBPUSH_VAPID_PUBLIC_KEY=your-vapid-public-key
WEBPUSH_VAPID_PRIVATE_KEY=your-vapid-private-key
WEBPUSH_VAPID_EMAIL=joshua@nichewaterproofing.com

# External Integrations
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALENDAR_REFRESH_TOKEN=your-refresh-token

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,png

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# Cron Job Settings
ENABLE_EMAIL_MONITORING=true
EMAIL_CHECK_INTERVAL=5
ALERT_CHECK_INTERVAL=60
CLEANUP_INTERVAL=1440

# Alert Thresholds (in days)
URGENT_THRESHOLD=2
WARNING_THRESHOLD=7
REMINDER_THRESHOLD=14

# Business Settings
COMPANY_NAME=Niche Waterproofing
COMPANY_EMAIL=joshua@nichewaterproofing.com
COMPANY_PHONE=+1-xxx-xxx-xxxx
DEFAULT_TIMEZONE=America/New_York

# Development Settings
DEBUG_LEVEL=info
ENABLE_CORS=true
API_RATE_LIMIT=1000

# Production Settings (override in production)
# NODE_ENV=production
# DATABASE_URL=postgresql://user:pass@host:port/dbname
# REDIS_URL=redis://localhost:6379